<h1>The Blog</h1>

<div id="blog">
	<% @posts.each do |post| %>
	<h3><%= link_to post.title, post %></h3>
	<p><%= post.content %></p>
	<p>Created at: <%= post.created_at %></p>
	<p><%= link_to 'Delete', post, :method => :delete, :data => { confirm: 'Are you sure?'} %></p>
	<hr />
	<% end %>

	<p>
		<%= link_to 'Create New Blog Post', new_post_path %>
	</p>
</div>
